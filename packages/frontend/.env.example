# Environnement
NODE_ENV=development

# URL API Backend
VITE_API_BASE_URL=http://localhost:3000/

# Configuration d'authentification
VITE_AUTH_TOKEN_NAME=flowbiz_token
VITE_AUTH_REFRESH_TOKEN_NAME=flowbiz_refresh_token

# Temps d'expiration du token
VITE_TOKEN_EXPIRY_MINUTES=60
VITE_REFRESH_TOKEN_EXPIRY_DAYS=7

# Configuration des routes
VITE_BASE_URL=/

# Mode de débogage et logs
VITE_ENABLE_LOGS=true

# Paramètres d'affichage
VITE_DEFAULT_LANGUAGE=fr
VITE_DEFAULT_ITEMS_PER_PAGE=25

# Version de l'application
VITE_APP_VERSION=$npm_package_version