{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/server.js",
    "dev": "concurrently \"tsc --watch\" \"tsnd --respawn src/server.ts\"",
    "db:test": "tsx src/scripts/testDb.ts",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v",
    "db:migrate": "tsx -r dotenv/config src/config/migrate.ts",
    "db:generate": "drizzle-kit generate --config src/config/drizzle.ts",
    "db:push": "drizzle-kit push --config src/config/drizzle.ts",
    "db:studio": "drizzle-kit studio --config=src/config/drizzle.ts",
    "db:seed": "tsx src/fixtures/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.4.1",
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/pdfkit": "^0.13.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.4",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.9",
    "pdfkit": "^0.16.0",
    "pg": "^8.13.3",
    "postgres": "^3.4.5",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.5",
    "@types/pg": "^8.11.11",
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.30.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
